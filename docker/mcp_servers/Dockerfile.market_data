FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastmcp>=2.11.0 \
    httpx \
    python-dotenv \
    fastapi>=0.115.0 \
    uvicorn>=0.30.0 \
    yfinance

# Copy server file
COPY src/mcp_custom/servers/market_data_server.py /app/server.py

# Expose port
EXPOSE 8001

# Run server
CMD ["python", "server.py"]
