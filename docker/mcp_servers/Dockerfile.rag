FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastmcp>=2.11.0 \
    httpx \
    python-dotenv \
    fastapi>=0.115.0 \
    uvicorn>=0.30.0 \
    openai>=1.0.0 \
    numpy>=1.24.0 \
    faiss-cpu>=1.7.4

# Copy necessary files
COPY vector_db/ /app/vector_db/
COPY src/mcp_custom/servers/rag_server.py /app/server.py

# Create embeddings directory
RUN mkdir -p /app/vector_db/embeddings

# Expose port
EXPOSE 8004

# Run server
CMD ["python", "server.py"]
