		{
			"name": "Send Messages",
			"item": [
				{
					"name": "Send Message to Supervisor (Investment Question)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"user\",\n  \"parts\": [\n    {\n      \"kind\": \"text\",\n      \"text\": \"내 포트폴리오를 분석해줘\"\n    }\n  ],\n  \"message_id\": \"{{$guid}}\",\n  \"context_id\": \"test-context-001\"\n}"
						},
						"url": {
							"raw": "http://localhost:8099/a2a/v1/messages",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8099",
							"path": ["a2a", "v1", "messages"]
						},
						"description": "Send investment-related question to Supervisor (will route to Robo Advisor)"
					}
				},
				{
					"name": "Send Message to Supervisor (General Question)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"user\",\n  \"parts\": [\n    {\n      \"kind\": \"text\",\n      \"text\": \"안녕하세요, 무엇을 도와드릴까요?\"\n    }\n  ],\n  \"message_id\": \"{{$guid}}\",\n  \"context_id\": \"test-context-002\"\n}"
						},
						"url": {
							"raw": "http://localhost:8099/a2a/v1/messages",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8099",
							"path": ["a2a", "v1", "messages"]
						},
						"description": "Send general question to Supervisor (will route to General Agent)"
					}
				},
				{
					"name": "Send Message to Robo Advisor Directly",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"user\",\n  \"parts\": [\n    {\n      \"kind\": \"text\",\n      \"text\": \"삼성전자에 투자하는 것이 좋을까요?\"\n    }\n  ],\n  \"message_id\": \"{{$guid}}\",\n  \"context_id\": \"test-context-003\"\n}"
						},
						"url": {
							"raw": "http://localhost:8100/a2a/v1/messages",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8100",
							"path": ["a2a", "v1", "messages"]
						},
						"description": "Send investment question directly to Robo Advisor Agent"
					}
				},
				{
					"name": "Send Message to General Agent Directly",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"user\",\n  \"parts\": [\n    {\n      \"kind\": \"text\",\n      \"text\": \"오늘 날씨가 어때요?\"\n    }\n  ],\n  \"message_id\": \"{{$guid}}\",\n  \"context_id\": \"test-context-004\"\n}"
						},
						"url": {
							"raw": "http://localhost:8102/a2a/v1/messages",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8102",
							"path": ["a2a", "v1", "messages"]
						},
						"description": "Send general question directly to General Agent"
					}
				},
				{
					"name": "Send Message to RAG Agent Directly",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"user\",\n  \"parts\": [\n    {\n      \"kind\": \"text\",\n      \"text\": \"투자 관련 문서를 검색해줘\"\n    }\n  ],\n  \"message_id\": \"{{$guid}}\",\n  \"context_id\": \"test-context-005\"\n}"
						},
						"url": {
							"raw": "http://localhost:8101/a2a/v1/messages",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8101",
							"path": ["a2a", "v1", "messages"]
						},
						"description": "Send document search request to RAG Agent"
					}
				}
			],
			"description": "Send messages to various A2A agents"
		},
